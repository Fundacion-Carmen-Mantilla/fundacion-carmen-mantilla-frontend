# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript
[*.ts]
ij_typescript_use_double_quotes = false  # JetBrains-specific (opcional)
indent_size = 2

# JSON files
[*.json]
indent_size = 2
indent_style = space
charset = utf-8

# HTML files
[*.html]
indent_size = 2
indent_style = space
max_line_length = 120

# SCSS files
[*.scss]
indent_size = 2
indent_style = space

# Markdown files
[*.md]
max_line_length = 120  # Mayor legibilidad
trim_trailing_whitespace = true

# Angular-specific templates
[*.component.html]
indent_size = 2
indent_style = space
max_line_length = 140  # Angular HTML templates pueden ser m√°s largos

[*.component.scss]
indent_size = 2
indent_style = space